@{
    ViewBag.Title = "Iniciar Sesión"; // Título específico para esta página
    Layout = "~/Views/Shared/_Layout.cshtml"; // Usamos el layout compartido
}

<style>
    /* Tu CSS existente */
    .login-container {
        max-width: 450px;
        margin: 50px auto;
        padding: 30px;
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        color: #066782;
    }

        .login-container h3 {
            font-weight: 600;
            margin-bottom: 25px;
            color: #20b1d9;
        }

    .form-group label {
        font-weight: 500;
        color: #066782;
    }

    .form-control {
        border: 1px solid #20b1d9;
        border-radius: 10px;
        padding: 10px;
        font-size: 15px;
    }

        .form-control:focus {
            outline: none;
            border-color: #066782;
            box-shadow: 0 0 0 2px rgba(32, 177, 217, 0.2);
        }

    .btn-primary {
        background-color: #20b1d9;
        border: none;
        padding: 10px;
        font-size: 16px;
        font-weight: 500;
        border-radius: 10px;
    }

        .btn-primary:hover {
            background-color: #066782;
        }

    .btn-outline-success {
        border-color: #20b1d9;
        color: #066782;
    }

        .btn-outline-success:hover {
            background-color: #20b1d9;
            color: white;
        }

    .text-center a {
        font-size: 14px;
    }

    .eye-toggle {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 10px;
        font-size: 14px;
        color: #555;
        cursor: pointer;
        transition: color 0.2s ease;
        gap: 6px;
    }

        .eye-toggle:hover {
            color: #066782;
        }

        .eye-toggle i {
            font-size: 16px;
        }
</style>

<div class="login-container">
    <h3 class="text-center">Iniciar Sesión</h3>

    <div id="respuesta" aria-live="polite" class="mb-3"></div>
    <form id="loginForm">
        @* No se especifican action/method aquí, ya que el JS lo manejará *@

        <div class="form-group mb-3">
            <label for="txtUsuario">Nombre de Usuario o Correo</label>
            <input type="text" id="txtUsuario" name="usuario" class="form-control" placeholder="Ingrese su usuario o correo" required />
            <div class="error-message" id="usuarioError"></div>
        </div>

        <div class="form-group mt-3">
            <label for="txtContra">Contraseña</label>
            <input type="password" id="txtContra" name="contrasena" class="form-control" placeholder="Ingrese su contraseña" required />
            <div class="error-message" id="contrasenaError"></div>
            <div class="eye-toggle" onclick="togglePassword()">
                <i id="eyeIcon" class="fas fa-eye-slash"></i>
                <span>Mostrar contraseña</span>
            </div>
        </div>

        <button type="submit" id="submitButton" class="btn btn-primary btn-block mt-4 w-100">Iniciar Sesión</button>
        <div id="loadingIndicator" style="display:none; text-align: center; margin-top: 10px;">Cargando...</div>

        <div class="text-center mt-4">
            <a href="~/SolicitarRecuperacion.aspx" class="btn btn-link btn-sm text-secondary">
                ¿Olvidaste tu contraseña?
            </a>
        </div>
    </form>
</div>

@section scripts {
    @* Asegúrate de que jQuery esté cargado ANTES de este script, usualmente en _Layout.cshtml *@
    @* CDN de SweetAlert2 (JS) *@
    <script src="~/Content/DataTables/js/sweetalert2@11.js"></script>

    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('txtContra');
            const eyeIcon = document.getElementById('eyeIcon');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                eyeIcon.classList.remove('fa-eye-slash');
                eyeIcon.classList.add('fa-eye');
            } else {
                passwordInput.type = 'password';
                eyeIcon.classList.remove('fa-eye');
                eyeIcon.classList.add('fa-eye-slash');
            }
        }

        $(document).ready(function() {
            $("#loginForm").submit(function(e) {
                e.preventDefault(); // Evita el envío tradicional del formulario

                $("#respuesta").empty();
                $(".error-message").empty();

                let isValid = true;
                const usuario = $("#txtUsuario").val();
                const contrasena = $("#txtContra").val();

                if (!usuario) {
                    $("#usuarioError").text("El usuario es requerido.").css("color", "red");
                    isValid = false;
                }
                if (!contrasena) {
                    $("#contrasenaError").text("La contraseña es requerida.").css("color", "red");
                    isValid = false;
                }

                if (!isValid) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error de validación',
                        text: 'Por favor, complete todos los campos requeridos.'
                    });
                    return;
                }

                $("#loadingIndicator").show();
                $("#submitButton").prop("disabled", true);

                $.ajax({
                    url: '@Url.Action("VerificarCredenciales", "Login")',
                    method: 'POST',
                    data: $(this).serialize(), // Envía los datos del formulario
                    success: function(resp) {
                        if (resp.exito) {
                            Swal.fire({
                                icon: 'success',
                                title: '¡Éxito!',
                                text: resp.mensaje,
                                timer: 2000,
                                timerProgressBar: true
                            }).then((result) => {
                                // **** Ajusta esta URL a tu página principal después del login ****
                                // Por ejemplo, si es el Index del HomeController: '/Home/Index'
                                // Si es el Index del UsuarioController: '/Usuario/Index'
                                window.location.href = '/Usuario/Index'; // Ejemplo de redirección
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error al iniciar sesión',
                                text: resp.mensaje
                            });
                        }
                    },
                    error: function(jqXHR, textStatus, errorThrown) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error de conexión',
                            text: 'Ocurrió un error al procesar la solicitud. Por favor, inténtelo de nuevo más tarde.'
                        });
                        console.error("Error en la solicitud AJAX:", textStatus, errorThrown, jqXHR);
                    },
                    complete: function() {
                        $("#loadingIndicator").hide();
                        $("#submitButton").prop("disabled", false);
                    }
                });
            });
        });
    </script>
}